{
  "name": "Phocus",
  "description": "Get in the zone and track your focus time.",
  "version": "1.0.0",
  "manifest_version": 3,
  "permissions": [
    "alarms",
    "idle",
    "notifications",
    "sidePanel",
    "storage"
  ],
  "action": {
    "default_icon": {
      "16": "images/icon-blue-16.png",
      "32": "images/icon-blue-32.png",
      "48": "images/icon-blue-48.png",
      "128": "images/icon-blue-128.png"
    },
    "default_title": "Phocus",
    "default_popup": "popup.html"
  },
  "side_panel": {
    "default_path": "side-panel.html"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "images/icon-blue-16.png",
    "32": "images/icon-blue-32.png",
    "48": "images/icon-blue-48.png",
    "128": "images/icon-blue-128.png"
  }
}
